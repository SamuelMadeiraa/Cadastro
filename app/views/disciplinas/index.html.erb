<h1>Lista de Disciplinas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplinas.each do |disciplina| %>
      <tr>
        <td><%= disciplina.nome %></td>
        <td><%= link_to 'Mostrar', disciplina_path(disciplina) %></td>
        <td><%= link_to 'Editar', edit_disciplina_path(disciplina) %></td>
        <td><%= link_to 'Excluir', disciplina_path(disciplina), method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nova Disciplina', new_disciplina_path %>
