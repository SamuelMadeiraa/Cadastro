<h1>Alunos Fitrados</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Turma</th>
      <th>Disciplinas</th>
    </tr>
  </thead>
  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
      <td><%= aluno.nome_completo%></td>
      <td><%= aluno.turma.turma%></td>
      <td>
        <% aluno.disciplinas.each do |disciplina| %>
          <li><%= disciplina.nome %></li>
        <% end %>
      </td>
     </tr>
    <% end %>
  </tbody>
</table>
