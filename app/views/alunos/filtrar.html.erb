<h1>Alunos Fitrados</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
     <th>Disciplina</th>
      <th>Turma</th>
    </tr>
  </thead>
  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.nome_completo%></td>
        <td>
        <% disciplina = Disciplina.find_by(id: aluno.disciplina_id) %>
        <%= disciplina ? disciplina.nome : 'Nenhuma disciplina' %>
      </td>        
      <td><%= aluno.turma.turma%></td>

        
      </tr>
    <% end %>
  </tbody>
</table>
