<div class="container">
  <div class="form-container">
    <%= form_with(model: @professor, local: true, class: "form") do |form| %>
      <% if @professor.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@professor.errors.count, "erro") %> proibiu este professor de ser salvo:</h2>

          <ul>
            <% @professor.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :nome_completo %>
        <%= form.text_field :nome_completo, class: "input" %>
      </div>

      <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email, class: "input" %>
    </div>

      <div class="field">
        <%= form.label :cpf %>
        <%= form.text_field :cpf, class: "input" %>
      </div>

      <div class="field">
      <%= form.label :aniversario %>
      <%= form.date_field :data_nascimento, class: "input" %>
    </div>
   

    <div class="mb-4">
    <%= form.label :turma_id %>
    <%= form.select :turma_id, options_for_select(Turma.all.map { |t| [t.turma, t.id] }), class: "input" %>
  </div>


  <div class="field">
  <%= form.label :disciplina_ids, 'Disciplinas' %><br>
  form.collection_check_boxes :disciplina_ids, Disciplina.all, :id, :nome, { }, { class: "input" } do |b|
    <div class="collection-check-box">
      <%= b.check_box + b.label %>
    </div>
  <% end %>
</div>


  

      <div class="actions">
        <%= form.submit @professor.persisted? ? 'Editar Professor' : 'Novo professor', class: "input" %>
      </div>
    <% end %>
  </div>
</div>
