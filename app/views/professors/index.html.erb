<!-- app/views/professors/index.html.erb -->
<h1>Professores</h1>

<table>
  <thead>
    <tr>
      <th>Nome Completo</th>
      <th>CPF</th>
      <th>Data de Nascimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.nome_completo %></td>
        <td><%= professor.cpf %></td>
        <td><%= professor.data_nascimento %></td>
        <td><%= link_to 'Show', professor %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor) %></td>
        <td><%= link_to 'Destroy', professor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Professor', new_professor_path %>
